# Copy to `.env` and tailor values before running the project.

# --- Common / development defaults ---
DJANGO_SECRET_KEY=change-me
DJANGO_DEBUG=True
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
DJANGO_CSRF_TRUSTED_ORIGINS=http://localhost:8000
DJANGO_TIME_ZONE=Asia/Taipei
DJANGO_SECURE_CONTENT_TYPE_NOSNIFF=True
DJANGO_LOG_LEVEL=INFO
DJANGO_COLLECTSTATIC=0
DJANGO_USE_X_FORWARDED_HOST=False
DJANGO_USE_SECURE_PROXY_HEADER=False
POSTGRES_DB=lemon_spa
POSTGRES_USER=lemon_spa
POSTGRES_PASSWORD=change-me
POSTGRES_HOST=db
POSTGRES_PORT=5432
# Optional: DATABASE_URL=postgresql://user:password@host:5432/dbname

# --- Production overrides (uncomment and adjust) ---
# DJANGO_DEBUG=False
# DJANGO_ALLOWED_HOSTS=example.com
# DJANGO_CSRF_TRUSTED_ORIGINS=https://example.com
# DJANGO_SECURE_SSL_REDIRECT=False
# DJANGO_SESSION_COOKIE_SECURE=False
# DJANGO_CSRF_COOKIE_SECURE=False
# DJANGO_USE_X_FORWARDED_HOST=True
# DJANGO_USE_SECURE_PROXY_HEADER=False
# DJANGO_COLLECTSTATIC=1
# GUNICORN_WORKERS=3
